    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" translate="true" xsi:type="string">You are logged in.</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="loginascustomer_login" template="Magefan_LoginAsCustomer::login.phtml"/>
        </referenceContainer>
    </body>
</page>
